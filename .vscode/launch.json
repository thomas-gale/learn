{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Learn Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test/learn_test",
            "args": [
                "--gtest_filter=GymClient.*"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Environment Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/environment/launch_gym_server.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        }
    ],
    "compounds": [
        {
            "name": "Learn Tests & Environment Server",
            "configurations": ["Learn Tests", "Environment Server"]
        }
    ]
}